/* pages/index/_components/taskItem/index.wxss */
.task-item-container {
  width: calc(100% - 24rpx);
  height: 200rpx;
  background-color: #091f48;
  border-top-right-radius: 160rpx;
  border-bottom-right-radius: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.right {
  margin-left: 24rpx;
  border-radius: 0;
  border-top-left-radius: 160rpx;
  border-bottom-left-radius: 160rpx;
}
.task-item-header{
  display: flex;
}
.task-item-tag{
  background-color: #13e5fe;
  width: 85rpx; 
  height: 200rpx; 
}
.task-item-header-img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #00d3ff;
  background-color: #ac4944;
}
.task-item-header-title{
  width: 123rpx;    
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.task-item-content{
  font-size: 38rpx;
  color: #fff;
  width: 302rpx;
}
.task-item-prize{
  width: 85rpx;
  height: 200rpx;
  background-color: #fff;
  margin: 0 38rpx 0 0;
}